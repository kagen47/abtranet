    link(href='/css/style.css', rel='stylesheet')
    link(href='/css/style-responsive.css', rel='stylesheet')
  body
    // header start design inside body
    header.head-section
      .navbar.navbar-default.navbar-static-top.container
        .navbar-header
          button.navbar-toggle(data-target='.navbar-collapse', data-toggle='collapse', type='button')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img(alt='sample', src='/images/earthgif.gif')
            span ABTRANET Global Solutions
        .navbar-collapse.collapse
          // nav bar horizontal
          ul.nav.navbar-nav
            li
              // home menu option
              a(href='/') Home
            // about menu option
            li
              a(href='/about') About
            // service menu option
            li
              a(href='/service') Services
            // contact menu option
            li
              a(href='/contact') Contact
            // products menu option
            li
              a(href='/products') Products
            li
              // shoppingCart menu option
              a(href='/products/cart') Shopping Cart
            // TRANSLATE BOX
            #google_translate_element2
            script(type='text/javascript').
              function googleTranslateElementInit2() {new google.translate.TranslateElement({pageLanguage: 'en', autoDisplay: false}, 'google_translate_element2');}
            script(type='text/javascript', src='/https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit2')
        // END TRANSLATE BOX
    // header end
    // breadcrumbs start
    .breadcrumbs
      .container
        .row
          .col-lg-4.col-sm-4
            h1
              | Product Details
    // breadcrumbs end
    // container start
    // container start
    .container
      .row
        .col-lg-5
          .about-carousel.wow.fadeInLeft
            #myCarousel.carousel.slide
              // Carousel items
              .carousel-inner
                .active.item
                  img(src=product[0].img, alt='')
                  .carousel-caption
                    p #{product[0].model}
        .col-lg-7.about.wow.fadeInRight
          h3  #{product[0].model}
          p
            | #{product[0].manufacturer}
          ul.list-unstyled
            li
              i.fa.fa-angle-right.pr-10
              | Description: #{product[0].description}
            li
              i.fa.fa-angle-right.pr-10
              | Part Number: #{product[0].partNum}
            //- li
            //-   i.fa.fa-angle-right.pr-10
            //-   |               Enter information here
          blockquote
            p
              | Cost: $#{product[0].price}
            form(method='post' action='/products/cart/add/#{product[0]._id}')
              button.btn.btn-lg.btn-login.btn-block(type='submit', value='cart')
                | Add to Cart
            if inCart
              form(method='post' action='/products/cart/remove/#{product[0]._id}')
                button.btn.btn-lg.btn-login.btn-block(type='submit', value='cart')
                  | Remove from Cart
